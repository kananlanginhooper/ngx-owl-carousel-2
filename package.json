{
    "name": "ngx-owl-carousel-2",
    "description": "An angular 11+ wrapper for jquery owl carousel 2 library with dynamic carousel item change detection",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:all": "npm i && cd projects/ngx-owl-carousel2 && npm i && cd ../.. && ng build",
        "test": "ng test",
        "lint": "pretty-quick && ng lint",
        "publish": "grunt bump && npm run lint && ng build --prod && cd dist/ngx-owl-carousel-2 && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kananlanginhooper/ngx-owl-carousel-2"
    },
    "keywords": [
        "angular 11 owl carousel"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kananlanginhooper/ngx-owl-carousel-2/issues"
    },
    "dependencies": {
        "@angular/common": "~11.2.9",
        "@angular/compiler": "~11.2.9",
        "@angular/core": "~11.2.9",
        "tslib": "^2.0.0",
        "zone.js": "~0.11.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.1102.9",
        "@angular-eslint/builder": "1.2.0",
        "@angular-eslint/eslint-plugin": "1.2.0",
        "@angular-eslint/eslint-plugin-template": "1.2.0",
        "@angular-eslint/schematics": "1.2.0",
        "@angular-eslint/template-parser": "1.2.0",
        "@angular/cli": "~11.2.9",
        "@angular/compiler-cli": "~11.2.9",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/jasmine": "~3.6.0",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "4.3.0",
        "@typescript-eslint/parser": "4.3.0",
        "codecov": "^3.8.1",
        "codelyzer": "^6.0.0",
        "eslint": "^7.6.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsdoc": "30.7.6",
        "eslint-plugin-prefer-arrow": "1.2.2",
        "grunt": "~1.3.0",
        "grunt-bump": "^0.8.0",
        "grunt-contrib-jshint": "~3.0.0",
        "grunt-contrib-nodeunit": "~3.0.0",
        "grunt-contrib-uglify": "~5.0.1",
        "husky": "^4.3.8",
        "imports-loader": "^0.7.0",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~6.1.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "ng-packagr": "^11.2.4",
        "prettier": "2.2.1",
        "pretty-quick": "^3.1.0",
        "protractor": "~7.0.0",
        "rxjs": "^6.6.7",
        "ts-node": "~8.3.0",
        "tslint": "~6.1.0",
        "typescript": "~4.1.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && npm run lint",
            "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
        }
    }
}
